    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Select all blog entries
        const blogs = Array.from(
          document.querySelectorAll(".blog-main__single")
        );
        const parent = blogs[0].parentNode; // Get the parent container
        const blogsPerPage = 10;

        // Reverse the array to get latest first (create a copy to avoid mutation)
        const reversedBlogs = [...blogs].reverse();

        // Re-insert the reversed blogs into the DOM to correct the order
        parent.innerHTML = ""; // Clear existing content
        reversedBlogs.forEach((blog) => parent.appendChild(blog));

        // Calculate total number of pages
        const totalPages = Math.ceil(reversedBlogs.length / blogsPerPage);

        // Get current page from URL parameter or default to 1
        const urlParams = new URLSearchParams(window.location.search);
        const currentPage = parseInt(urlParams.get("page")) || 1;

        // Calculate start and end index for current page
        const startIndex = (currentPage - 1) * blogsPerPage;
        const endIndex = startIndex + blogsPerPage;

        // Hide all blogs first
        reversedBlogs.forEach((blog) => (blog.style.display = "none"));

        // Show only blogs for the current page without reversing
        const blogsToShow = reversedBlogs.slice(startIndex, endIndex);
        blogsToShow.forEach((blog) => {
          blog.style.display = "block";
          blog.classList.add("fade-top"); // Ensure fade-top class for animation
        });

        // Generate pagination HTML dynamically
        const paginationUl = document.querySelector(".pagination");
        paginationUl.innerHTML = ""; // Clear existing pagination

        // Add previous button if not on the first page
        if (currentPage > 1) {
          const prevLi = document.createElement("li");
          prevLi.innerHTML = `
            <button class="prev-page" aria-label="Previous Page">
              <i class="fa-sharp fa-regular fa-arrow-left"></i>
            </button>
          `;
          prevLi.querySelector("button").addEventListener("click", () => {
            window.location.href = `blog.html?page=${currentPage - 1}`;
          });
          paginationUl.appendChild(prevLi);
        }

        // Generate page numbers
        for (let i = 1; i <= totalPages; i++) {
          const li = document.createElement("li");
          li.innerHTML = `
            <a href="blog.html?page=${i}" class="page-link ${
            currentPage === i ? "active" : ""
          }" aria-label="Go to page ${i}">
              ${i.toString().padStart(2, "0")}
            </a>
          `;
          paginationUl.appendChild(li);
        }

        // Add next button if not on the last page
        if (currentPage < totalPages) {
          const nextLi = document.createElement("li");
          nextLi.innerHTML = `
            <button class="next-page" aria-label="Next Page">
              <i class="fa-sharp fa-regular fa-arrow-right"></i>
            </button>
          `;
          nextLi.querySelector("button").addEventListener("click", () => {
            window.location.href = `blog.html?page=${currentPage + 1}`;
          });
          paginationUl.appendChild(nextLi);
        }
      });
    </script>
